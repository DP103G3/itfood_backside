<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberDetailFragment">


    <ImageView
        android:id="@+id/ivShop"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="32dp"
        android:src="@drawable/no_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="商家編號 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivShop" />

    <TextView
        android:id="@+id/tvShopId"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:textColor="#0000ff"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvNameTitle"
        app:layout_constraintTop_toTopOf="@+id/tvIdTitle" />

    <TextView
        android:id="@+id/tvStateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="商家狀態 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIdTitle" />

    <TextView
        android:id="@+id/tvShopState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="#0000ff"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvStateTitle"
        app:layout_constraintTop_toTopOf="@+id/tvStateTitle" />

    <TextView
        android:id="@+id/tvNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="商家店名 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStateTitle" />

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="#0000ff"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvNameTitle"
        app:layout_constraintTop_toTopOf="@+id/tvNameTitle" />

    <TextView
        android:id="@+id/tvPhoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="電話號碼 : "
        app:layout_constraintStart_toStartOf="@+id/tvNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvShopName" />

    <TextView
        android:id="@+id/tvShopPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvShopName"
        app:layout_constraintTop_toTopOf="@+id/tvPhoneTitle" />

    <TextView
        android:id="@+id/tvEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="電子信箱 : "
        app:layout_constraintStart_toStartOf="@+id/tvPhoneTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvShopPhone" />

    <TextView
        android:id="@+id/tvShopEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvShopPhone"
        app:layout_constraintTop_toTopOf="@+id/tvEmailTitle" />

    <TextView
        android:id="@+id/tvJoinDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="加入日期 : "
        app:layout_constraintStart_toStartOf="@+id/tvEmailTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvShopEmail" />

    <TextView
        android:id="@+id/tvShopJoinDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvShopEmail"
        app:layout_constraintTop_toTopOf="@+id/tvJoinDateTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>