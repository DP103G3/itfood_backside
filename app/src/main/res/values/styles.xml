<resources>

    <!-- Base application theme. -->
    <style name="ItFoodTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTextOnS</item>
        <item name="android:textColorPrimary">@color/colorTextOnP</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ItFoodTheme.toolBarExpand">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>
    <style name="ItFoodTheme.toolBarCollapsed">
        <item name="android:textColorPrimary">@color/colorTextOnP</item>
    </style>
    <style name="ShoppingCartLayoutTextBlack">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name = "android:textColor">@android:color/black</item>
        <item name= "android:textSize">16sp</item>
    </style>
    <style name="ItFoodTheme.spinner">
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
